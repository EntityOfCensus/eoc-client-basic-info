datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ClientProfile {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  address   String?
  contacts  Contact[] 
}

model Contact {
  id           Int      @id @default(autoincrement())
  date         String
  type         String
  description  String?
  clientId     Int
  client       ClientProfile @relation(fields: [clientId], references: [id])
}

model Task {
  id           Int      @id @default(autoincrement())
  name         String
  slug         String   @unique
  description  String?
  completed    Boolean
  due_date     DateTime
}
